<h2>Créer un compte</h2>

<%= form_with model: @user, url: signup_path, local: true do |form| %>
  <div class="form-group">
    <%= form.label :email, "Email" %>
    <%= form.email_field :email, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :first_name, "Prénom" %>  <!-- Ajoutez le prénom -->
    <%= form.text_field :first_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :last_name, "Nom" %>  <!-- Ajoutez le nom -->
    <%= form.text_field :last_name, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password, "Mot de passe" %>
    <%= form.password_field :password, class: "form-control", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :password_confirmation, "Confirmer le mot de passe" %>
    <%= form.password_field :password_confirmation, class: "form-control", required: true %>
  </div>

  <%= form.submit "S'inscrire", class: "btn btn-primary mt-3" %>
<% end %>

<%= link_to "Déjà un compte ? Se connecter", login_path %>
