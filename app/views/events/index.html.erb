<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-center">Événements</h1>
    <% if user_signed_in? %>
      <%= link_to "Créer un Événement", new_event_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <div class="row row-cols-1 row-cols-md-4 g-4">
    <% @events.each do |event| %>
      <div class="col">
        <div class="card h-100 text-center border-light shadow">
          <div class="card-body d-flex flex-column">
            <h5 class="card-title"><%= event.title %></h5>
            <p class="card-text"><strong>Date de début :</strong> <%= event.start_date %></p>
            <p class="card-text"><strong>Durée :</strong> <%= event.duration %> minutes</p>
            <p class="card-text"><strong>Prix :</strong> <%= event.price %> €</p>
            <p class="card-text"><strong>Lieu :</strong> <%= event.location %></p>
            <p class="card-text"><strong>Créé par :</strong> <%= event.user.email %></p>
            <p class="card-text"><strong>Nombre d'inscrits :</strong> <%= event.attendees.count %></p>
            <div class="mt-auto">
              <%= link_to 'Voir plus', event_path(event), class: "btn btn-outline-primary btn-sm" %>
              <% if current_user&.admin? %>
                <%= link_to 'Supprimer', event_path(event), method: :delete, data: { confirm: 'Êtes-vous sûr ?' }, class: 'btn btn-outline-danger btn-sm' %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
