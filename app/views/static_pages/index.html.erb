<div class="jumbotron">
  <h1 class="display-4">Bienvenue sur Eventbrite !</h1>
  <p class="lead">Découvrez les événements près de chez vous.</p>
  <hr class="my-4">
  <p>Cliquez sur un événement pour plus de détails.</p>
  <a class="btn btn-primary btn-lg" href="/events/new" role="button">Créer un événement</a>
</div>
<div class="container">
  <% @events.each do |event| %>
    <div class="card mb-3">
      <div class="card-body">
        <h5 class="card-title"><%= event.title %></h5>
        <p class="card-text"><%= event.description %></p>
        <a href="/events/<%= event.id %>" class="btn btn-primary">Voir l'événement</a>
      </div>
    </div>
  <% end %>
</div>
